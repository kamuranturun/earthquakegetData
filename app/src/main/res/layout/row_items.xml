<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="110dp">

    <TextView
        android:id="@+id/regionList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="region"
        android:layout_marginLeft="11dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="7dp"/>

    <TextView
        android:id="@+id/timeList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="time"
        app:layout_goneMarginLeft="11dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        app:layout_constraintStart_toEndOf="@+id/regionList"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="7dp"/>

    <TextView
        android:id="@+id/magnitudeTypeList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="magnitudetype"
        app:layout_goneMarginLeft="11dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/timeList"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"/>

    <ImageView
        android:id="@+id/mapImageList"
        android:layout_width="100dp"
        android:layout_marginTop="7dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/magnitudeTypeList" />
</androidx.constraintlayout.widget.ConstraintLayout>